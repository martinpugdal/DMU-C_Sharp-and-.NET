<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="L11___DockLayout.MainPage">

    <toolkit:DockLayout>
        <Button toolkit:DockLayout.DockPosition="Top" Text="Nord" HeightRequest="50" Clicked="OnButtonClicked" />
        <Button toolkit:DockLayout.DockPosition="Bottom" Text="Syd" HeightRequest="50" Clicked="OnButtonClicked" />
        <Button toolkit:DockLayout.DockPosition="Left" Text="Vest" WidthRequest="80" Clicked="OnButtonClicked" />
        <Button toolkit:DockLayout.DockPosition="Right" Text="Øst" WidthRequest="80" Clicked="OnButtonClicked" />

        <Editor HorizontalTextAlignment="Center" IsReadOnly="True" VerticalTextAlignment="Center" x:Name="MainEditor" Grid.Row="1" Grid.Column="1" AutoSize="TextChanges"/>
    </toolkit:DockLayout>

</ContentPage>
